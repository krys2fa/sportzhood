<div class="formbox">
  <h3 class="theme-color">Post a Comment</h3>

  <%= form_for [ @article, @comment ] do |f| %>
  <p>
    <%= f.hidden_field :author, :value => @current_user.name %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, class: 'form-control' %>
  </p>
  <p>
    <%= f.submit 'Comment', class: 'custom-btn' %>
  </p>
  <% end %>
</div>
