<%= form_with(model: user, local: true) do |form| %>
  <%= render 'shared/errors', object: form.object %>

  <div class="form-group">
    <%= form.label :name, class: "h3 font-weight-bold d-block"%>
    <%= form.text_field :name, class: "form-control", autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :email, class: "h3 font-weight-bold d-block"%>
    <%= form.email_field :email, class: "form-control"%>
  </div>

  <div class="actions">
    <%= form.submit  class: "custom-btn" %>
  </div>
<% end %>
