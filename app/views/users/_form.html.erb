    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :Name, class: "h3 font-weight-bold d-block"%>
  <%= form.text_field :Name, class: "h5 font-weight-bold d-block border-rounded w-75 mx-auto mt-3 mb-5"%>
</div>

<div class="field">
  <%= form.label :email, class: "h3 font-weight-bold d-block"%>
  <%= form.email_field :email, class: "h5 font-weight-bold d-block border-rounded w-75 mx-auto mt-3 mb-5"%>
</div>

<div class="actions">
  <%= form.submit  class: "btn-primary py-3 px-5 border-0 rounded-pill" %>
</div>
<% end %>
