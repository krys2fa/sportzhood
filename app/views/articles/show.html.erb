<div class="container">
  <h1 class="theme-color text-center"><%= @article.Title %></h1>
  <div class="col-md-12">
    <div class="col-md-6" style="margin-bottom: 100px;">
      <p>Category: <%= @article.categories[0].Name %></p>
      <p>
        Tags:
        <% @article.tags.each do |tag| %>
        <%#= link_to tag.name, tag_path(tag) %>
          <span class="tag">
            <%= tag.name %>
          </span>
        <% end %>
      </p>

      <p class="text-center">
        <%= image_tag(@article.Image.article_show.url) %>
      </p>

      <p><%= @article.Text %></p>

      <div>
        <%= vote_button(@article) if @current_user %>
        <%= render partial: 'articles/comment', collection: @article.comments %>
        <%= link_to 'Edit | ', edit_article_path(@article) if @current_user %>
        <%= link_to 'Back', articles_path %>
      </div>
    </div>


    <% if @current_user %>
      <div class="col-md-6">
        <div class="text-center commentbox">
          <h3 class="theme-color"> <%= number_of_comments(@article) %></h3> <span>comment(s) posted for this
            article</span>
          <p><%= render partial: 'comments/form' %></p>
        </div>
      </div>
    <% end %>


  </div>

</div>
