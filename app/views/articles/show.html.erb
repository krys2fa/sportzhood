<div class="container">
  <h1 class="theme-color text-center"><%= @article.title %></h1>
  <div class="col-md-12">
    <div class="col-md-6" style="margin-bottom: 100px;">
      <p>Category: <%= @article.categories[0].name %></p>
      <p>
        Tags:
        <% @article.tags.each do |tag| %>
        <%#= link_to tag.name, tag_path(tag) %>
          <span class="tag">
            <%= tag.name %>
          </span>
        <% end %>
      </p>
      <p>
        <h6 class="theme-color"> <%= number_of_comments(@article) %> posted for this
          article</h6>
          <h6 class="theme-color"> <%= number_of_votes(@article) %><span> for this
              article</span></h6>
      </p>

      <p class="text-center">
        <%= image_tag(@article.image.article_show.url) %>
      </p>

      <p><%= @article.text %></p>

      <div>
        <%= vote_button(@article) if @current_user %><br />
        <%= render partial: 'articles/comment', collection: @article.comments.reverse %>
        <%= link_to 'Edit | ', edit_article_path(@article) if @current_user %>
        <%= link_to 'Back', articles_path %>
      </div>
    </div>

    <% if @current_user %>
      <div class="col-md-6">
        <div class="text-center commentbox">
          <p><%= render partial: 'comments/form' %></p>
        </div>
      </div>
    <% end %>

  </div>

</div>
