<%= form_with(model: article, local: true) do |form| %>
<% if article.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

  <ul>
    <% article.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :title %>
  <%= form.text_field :title, class: 'form-control', autofocus: true %>
</div>

<div class="field">
  <%= form.label :text %>
  <%= form.text_area :text, class: 'h5 font-weight-bold form-control' %>
</div>

<div class="field">
  <%= form.label :image %>
  <%= form.file_field :image, class: 'custom-btn' %>
</div>

<div class="field">
  <%= form.hidden_field :image_cache%>
</div>

<div class="field">
  <%= form.label :category_id, 'Category' %>
  <%= form.collection_select :category_id, Category.order(:name), :id, :name %>
</div>

<div class="field">
  <%= form.label :tag_list, 'Add tags (separate with commas)' %><br />
  <%= form.text_field :tag_list, class: 'form-control' %>
</div>

<div class="actions">
  <%= form.submit class: 'custom-btn' %>
</div>
<% end %>
