  <div class="grid-c">
    <% @category.articles.reverse.each do |article| %>
    <div class='grid-r'>
      <% if article.id.odd?  %>
        <p class="article-img"><%= image_tag(article.Image.thumbnail.url, :width => 257, :height => 300) %></p>
      <% end %>
      <div class="content">
        <p class="theme-color">
          <%= @category.Name %>
        </p>
        <p><%= link_to article.Title.truncate(30), article_path(article), class: 'nav-theme underline' %></p>
        <p><%= article.Text.truncate(100, separator: ' ', omission: '.... (continued)') %></p>

        <p>Author: <%= article.user.Name %></p>
        <span class="theme-color"><%= article.votes.size %> </span>vote(s)
        <%= vote_button(article) if @current_user %><br />
        <span class="theme-color"><%= article.comments.size %></span> comment(s)

      </div>

      <% if article.id.even?  %>
        <p class="article-img"><%= image_tag(article.Image.thumbnail.url, :width => 257, :height => 300) %></p>
      <% end %>
    </div>
    <% end %>
  </div>
