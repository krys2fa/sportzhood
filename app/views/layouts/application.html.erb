<!DOCTYPE html>
<html>

<head>
  <title>Sportzhood</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'sportzhood', articles_path, class: 'navbar-brand' %>
      </div>
      <div id="navbar">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', articles_path %></li>
        </ul>

        <ul class="nav navbar-nav">
          <% @categories.each do |category| %>
          <li><%= link_to category.Name, category_path(category) %></li>
          <% end %>
        </ul>


        <ul class="nav navbar-nav pull-right">
          <% if session[:id].nil? %>
            <li><%= link_to 'Log In', sessions_path %></li>
            <li><%= link_to 'Sign Up', new_user_path %></li>
          <% else %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= @current_user.Name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Profile', edit_user_path(@current_user) %></li>
                <li>
                  <%= link_to 'Log out', session_path(session), data: {:confirm => 'Are you sure?'},
                     :method => :delete, class: "nav-item nav-link text-white" %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
    <% end %>
  </div>

  <div class="container">
    <%= yield %>
  </div>



</body>

</html>
